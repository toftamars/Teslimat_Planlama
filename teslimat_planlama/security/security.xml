<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Teslimat modülü için kategori -->
        <record id="module_category_teslimat" model="ir.module.category">
            <field name="name">Teslimat</field>
            <field name="sequence">75</field>
        </record>

        <!-- Teslimat Sürücüsü Grubu -->
        <record id="group_teslimat_driver" model="res.groups">
            <field name="name">Teslimat Sürücüsü</field>
            <field name="category_id" ref="teslimat_planlama.module_category_teslimat"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Sürücüler için özel menü ve butonlar (Yolda, Teslimatı Tamamla)</field>
        </record>

        <!-- Teslimat Yöneticisi Grubu -->
        <record id="group_teslimat_manager" model="res.groups">
            <field name="name">Teslimat Yöneticisi</field>
            <field name="category_id" ref="teslimat_planlama.module_category_teslimat"/>
            <field name="implied_ids" eval="[(4, ref('stock.group_stock_manager'))]"/>
            <field name="comment">Tüm yetkiler + validasyon bypass (pazar günü, kapasite, vb.)</field>
        </record>
    </data>
</odoo>

