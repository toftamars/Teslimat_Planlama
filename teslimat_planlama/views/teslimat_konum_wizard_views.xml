<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Sürücü Konum Güncelleme Wizard Views -->
    
    <record id="view_teslimat_konum_wizard_form" model="ir.ui.view">
        <field name="name">teslimat.konum.wizard.form</field>
        <field name="model">teslimat.konum.wizard</field>
        <field name="arch" type="xml">
            <form string="Konum Güncelle">
                <sheet>
                    <group>
                        <field name="teslimat_belgesi_id" readonly="1"/>
                    </group>
                    <group>
                        <field name="enlem"/>
                        <field name="boylam"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_guncelle" string="Güncelle" type="object" class="btn-primary"/>
                    <button string="İptal" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

