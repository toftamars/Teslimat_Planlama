<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ana Sayfa Form View -->
    <record id="view_teslimat_ana_sayfa_form" model="ir.ui.view">
        <field name="name">teslimat.ana.sayfa.form</field>
        <field name="model">teslimat.ana.sayfa</field>
        <field name="arch" type="xml">
            <form string="Teslimat Ana Sayfa - Kapasite Sorgulama">
                <sheet>
                    <field name="sorgulandi" invisible="1"/>
                    <div class="oe_title">
                        <h1>
                            <span>🚗 Araç-İlçe Kapasite Sorgulama</span>
                        </h1>
                    </div>
                    
                    <!-- Sorgulama Alanları -->
                    <group>
                        <group>
                            <field name="arac_id" domain="[('aktif', '=', True), ('gecici_kapatma', '=', False)]" 
                                   options="{'no_create': True, 'no_edit': True}"/>
                            <field name="ilce_id" domain="[('aktif', '=', True), ('teslimat_aktif', '=', True)]" 
                                   options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                        <group>
                            <field name="ilce_uygun_mu" readonly="1"/>
                        </group>
                    </group>
                    
                                               <!-- Sorgula Butonu -->
                           <group>
                               <button name="action_sorgula" 
                                       string="🔍 Sorgula" 
                                       type="object" 
                                       class="btn-primary"
                                       attrs="{'invisible': ['|', ('arac_id', '=', False), ('ilce_id', '=', False)]}"/>
                           </group>
                    
                    <!-- Sonuç Alanları -->
                    <notebook>
                        <page string="📅 Tarih Bazlı Kapasite">
                            <div class="alert alert-info" role="alert">
                                <strong>💡 Kullanım:</strong> Uygun tarihlere tıklayarak Transfer Belgesi Entegrasyonu wizard'ını açabilir ve Stock Picking'lerden otomatik teslimat oluşturabilirsiniz.
                            </div>
                            <field name="tarih_listesi" readonly="1" options="{'no_open': True}">
                                <tree editable="false" create="false" edit="false" delete="false" open_form="0">
                                    <field name="tarih" readonly="1"/>
                                    <field name="gun_adi" readonly="1"/>
                                    <field name="teslimat_sayisi" readonly="1"/>
                                    <field name="toplam_kapasite" readonly="1"/>
                                    <field name="kalan_kapasite" readonly="1"/>
                                    <field name="doluluk_orani" widget="percentage" readonly="1"/>
                                    <field name="durum_text" readonly="1"/>
                                    <field name="durum_icon" readonly="1"/>
                                    <field name="doluluk_bar" widget="html" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        
                        <page string="📊 İlçe Kapasitesi">
                            <group>
                                <group>
                                    <field name="toplam_kapasite" readonly="1"/>
                                    <field name="kullanilan_kapasite" readonly="1"/>
                                </group>
                                <group>
                                    <field name="kalan_kapasite" readonly="1"/>
                                    <field name="teslimat_sayisi" readonly="1"/>
                                </group>
                            </group>
                            
                            <!-- Uygun Araçlar -->
                            <field name="uygun_arac_ids" readonly="1" widget="many2many_tags"/>
                        </page>
                        

                        
                        <page string="ℹ️ Uygunluk Bilgisi">
                            <field name="uygunluk_mesaji" readonly="1" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Ana Sayfa Action -->
    <record id="action_teslimat_ana_sayfa" model="ir.actions.act_window">
        <field name="name">Ana Sayfa</field>
        <field name="res_model">teslimat.ana.sayfa</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                📊 Teslimat kapasite sorgulama sayfasına hoş geldiniz!
            </p>
            <p>
                Araç ve ilçe seçerek kapasite bilgilerini sorgulayabilirsiniz.
            </p>
            <p>
                <strong>Kurallar:</strong><br/>
                • Anadolu Yakası araç sadece Anadolu Yakası ilçelerine gidebilir<br/>
                • Avrupa Yakası araç sadece Avrupa Yakası ilçelerine gidebilir<br/>
                • Küçük Araç 1, Küçük Araç 2 ve Ek Araç her iki yakaya da gidebilir
            </p>
        </field>
    </record>

    <!-- Ana Sayfa Menu -->
    <menuitem id="menu_teslimat_ana_sayfa"
              name="🏠 Ana Sayfa"
              parent="menu_teslimat_planlama_root"
              action="action_teslimat_ana_sayfa"
              sequence="1"/>
</odoo>
