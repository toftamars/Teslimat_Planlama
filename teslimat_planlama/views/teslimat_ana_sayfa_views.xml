<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Teslimat Ana Sayfa Views -->
    
    <record id="view_teslimat_ana_sayfa_form" model="ir.ui.view">
        <field name="name">teslimat.ana.sayfa.form</field>
        <field name="model">teslimat.ana.sayfa</field>
        <field name="arch" type="xml">
            <form string="Kapasite Sorgulama" class="o_form_nosheet">
                <!-- Y√∂netici Bilgilendirme - Minimal -->
                <div class="alert alert-info mb-2" role="alert" groups="teslimat_planlama.group_teslimat_manager">
                    <i class="fa fa-crown"/> Y√∂netici modu aktif - T√ºm kƒ±sƒ±tlamalar bypass edilir
                </div>
                
                <!-- Ana ƒ∞√ßerik -->
                <div class="container-fluid">
                    <!-- Filtreler -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="card shadow-sm">
                                <div class="card-header bg-white border-bottom">
                                    <h5 class="mb-0"><i class="fa fa-filter"/> Filtreler</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="arac_id" class="form-label">Ara√ß <span class="text-danger">*</span></label>
                                            <field name="arac_id" widget="many2one" 
                                                   options="{'no_create': True, 'no_edit': True}" 
                                                   class="form-control"
                                                   required="1"/>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="state_id" class="form-label">ƒ∞l</label>
                                            <field name="state_id" widget="many2one" 
                                                   options="{'no_create': True, 'no_edit': True}" 
                                                   class="form-control"
                                                   attrs="{'invisible': [('arac_id', '=', False)]}"/>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="ilce_id" class="form-label">ƒ∞l√ße</label>
                                            <field name="ilce_id" widget="many2one" 
                                                   options="{'no_create': True, 'no_edit': True}" 
                                                   class="form-control"
                                                   attrs="{'invisible': [('state_id', '=', False)], 'required': [('state_id', '!=', False)]}"/>
                                        </div>
                                    </div>
                                    
                                    <div class="row mt-3">
                                        <div class="col-12 text-end">
                                            <button name="action_sorgula" string="üîÑ Yenile" type="object" 
                                                   class="btn btn-primary me-2"
                                                   attrs="{'invisible': [('arac_id','=', False)]}"/>
                                            <button string="‚úñÔ∏è Kapat" special="cancel" class="btn btn-secondary"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Uygunluk Durumu -->
                    <div class="row mb-3" attrs="{'invisible': [('ilce_uygun_mu','=', False)]}">
                        <div class="col-12">
                            <div class="alert alert-success mb-0">
                                <i class="fa fa-check-circle"/> 
                                <strong>Uygun:</strong> Se√ßilen ara√ß ve il√ße e≈üle≈ümesi uyumlu
                                <field name="ilce_uygun_mu" invisible="1"/>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Hata Mesajƒ± -->
                    <div class="row mb-3" attrs="{'invisible': [('ilce_uygun_mu','=', True)]}">
                        <div class="col-12">
                            <div class="alert alert-danger mb-0">
                                <i class="fa fa-exclamation-triangle"/> 
                                <strong>Uygun Deƒüil:</strong>
                                <field name="uygunluk_mesaji" readonly="1" nolabel="1" class="mt-2"/>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Kapasite Bilgileri -->
                    <div class="row" attrs="{'invisible': [('ilce_uygun_mu','=', False)]}">
                        <div class="col-12">
                            <div class="card shadow-sm">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0"><i class="fa fa-bar-chart"/> Kapasite Bilgileri</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-md-3 mb-3">
                                            <div class="card border-primary">
                                                <div class="card-body">
                                                    <h6 class="text-muted mb-2">Toplam Kapasite</h6>
                                                    <h3 class="text-primary mb-0">
                                                        <field name="toplam_kapasite" readonly="1" widget="integer" nolabel="1"/>
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="card border-info">
                                                <div class="card-body">
                                                    <h6 class="text-muted mb-2">Kullanƒ±lan</h6>
                                                    <h3 class="text-info mb-0">
                                                        <field name="kullanilan_kapasite" readonly="1" widget="integer" nolabel="1"/>
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="card border-success">
                                                <div class="card-body">
                                                    <h6 class="text-muted mb-2">Kalan Kapasite</h6>
                                                    <h3 class="text-success mb-0">
                                                        <field name="kalan_kapasite" readonly="1" widget="integer" nolabel="1"/>
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="card border-warning">
                                                <div class="card-body">
                                                    <h6 class="text-muted mb-2">Teslimat Sayƒ±sƒ±</h6>
                                                    <h3 class="text-warning mb-0">
                                                        <field name="teslimat_sayisi" readonly="1" widget="integer" nolabel="1"/>
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Uygun Ara√ßlar -->
                                    <div class="row mt-4">
                                        <div class="col-12">
                                            <h6 class="text-muted mb-2"><i class="fa fa-truck"/> Uygun Ara√ßlar</h6>
                                            <field name="uygun_arac_ids" readonly="1" widget="many2many_tags" nolabel="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Uygun G√ºnler Listesi -->
                    <div class="row mt-3" attrs="{'invisible': [('ilce_uygun_mu','=', False)]}">
                        <div class="col-12">
                            <div class="card shadow-sm">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0"><i class="fa fa-calendar"/> Uygun G√ºnler</h5>
                                </div>
                                <div class="card-body">
                                    <field name="uygun_gunler" readonly="1" nolabel="1">
                                        <tree decoration-success="kalan_kapasite &gt; 5 and not arac_kapali_mi"
                                              decoration-warning="kalan_kapasite &lt;= 5 and kalan_kapasite &gt; 0 and not arac_kapali_mi"
                                              decoration-danger="kalan_kapasite &lt;= 0 or arac_kapali_mi"
                                              create="false"
                                              edit="false"
                                              delete="false"
                                              default_order="tarih"
                                              no_open="true"
                                              sample="1">
                                            <field name="tarih" invisible="1"/>
                                            <field name="gun_adi" invisible="1"/>
                                            <field name="ana_sayfa_id" invisible="1"/>
                                            <field name="toplam_kapasite" invisible="1"/>
                                            <field name="arac_kapali_mi" invisible="1"/>
                                            <field name="tarih_str" string="üìÖ Tarih" readonly="1" 
                                                   optional="show"/>
                                            <field name="teslimat_sayisi" readonly="1" string="Teslimat" optional="show"/>
                                            <field name="kalan_kapasite" readonly="1" string="Kalan" optional="show"/>
                                            <field name="doluluk_yuzdesi" readonly="1" string="Doluluk %" widget="percentage" optional="show"/>
                                            <field name="durum_text" readonly="1" string="Durum" optional="show"/>
                                            <field name="kapatma_sebep" readonly="1" string="üö´ Kapatma Sebebi" 
                                                   attrs="{'invisible': [('arac_kapali_mi', '=', False)]}"
                                                   optional="show"/>
                                            <field name="kapatan_kisi" readonly="1" string="üë§ Kapatan"
                                                   attrs="{'invisible': [('arac_kapali_mi', '=', False)]}"
                                                   optional="show"/>
                                </tree>
                            </field>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Gizli Alanlar -->
                    <field name="arac_kucuk_mu" invisible="1"/>
                </div>
                
                <footer>
                    <button string="Kapat" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_teslimat_ana_sayfa" model="ir.actions.act_window">
        <field name="name">Ana Sayfa</field>
        <field name="res_model">teslimat.ana.sayfa</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Teslimat Kapasite Sorgulama
            </p>
            <p>
                Ara√ß ve il√ße se√ßerek teslimat kapasitesini sorgulayabilirsiniz.
            </p>
        </field>
    </record>
</odoo>
