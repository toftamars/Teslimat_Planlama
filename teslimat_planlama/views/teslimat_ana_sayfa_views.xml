<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Teslimat Ana Sayfa Views -->
    
    <record id="view_teslimat_ana_sayfa_form" model="ir.ui.view">
        <field name="name">teslimat.ana.sayfa.form</field>
        <field name="model">teslimat.ana.sayfa</field>
        <field name="arch" type="xml">
            <form string="Kapasite Sorgulama" class="o_form_nosheet">
                <!-- Yönetici Bilgilendirme - Minimal -->
                <div class="alert alert-info mb-2" role="alert" groups="teslimat_planlama.group_teslimat_manager">
                    <i class="fa fa-crown"/> Yönetici modu aktif - Tüm kısıtlamalar bypass edilir
                </div>
                
                <!-- Ana İçerik -->
                <div class="container-fluid">
                    <!-- Filtreler -->
                    <div class="row mb-3">
                        <div class="col-12">
                            <div class="card shadow-sm">
                                <div class="card-header bg-white border-bottom">
                                    <h5 class="mb-0"><i class="fa fa-filter"/> Filtreler</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label for="arac_id" class="form-label">Araç <span class="text-danger">*</span></label>
                                            <field name="arac_id" widget="many2one" 
                                                   options="{'no_create': True, 'no_edit': True}" 
                                                   class="form-control"
                                                   required="1"/>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="state_id" class="form-label">İl</label>
                                            <field name="state_id" widget="many2one" 
                                                   options="{'no_create': True, 'no_edit': True}" 
                                                   class="form-control"
                                                   attrs="{'invisible': [('arac_id', '=', False)]}"/>
                                        </div>
                                        <div class="col-md-4">
                                            <label for="ilce_id" class="form-label">İlçe</label>
                                            <field name="ilce_id" widget="many2one" 
                                                   options="{'no_create': True, 'no_edit': True}" 
                                                   class="form-control"
                                                   attrs="{'invisible': [('state_id', '=', False)], 'required': [('state_id', '!=', False)]}"/>
                                        </div>
                                    </div>
                                    
                                    <div class="row mt-3">
                                        <div class="col-12 text-end">
                                            <button name="action_sorgula" string="Yenile" type="object" 
                                                   class="btn btn-primary"
                                                   attrs="{'invisible': [('arac_id','=', False)]}">
                                                <i class="fa fa-refresh"/> Yenile
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Uygunluk Durumu -->
                    <div class="row mb-3" attrs="{'invisible': [('ilce_uygun_mu','=', False)]}">
                        <div class="col-12">
                            <div class="alert alert-success mb-0">
                                <i class="fa fa-check-circle"/> 
                                <strong>Uygun:</strong> Seçilen araç ve ilçe eşleşmesi uyumlu
                                <field name="ilce_uygun_mu" invisible="1"/>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Hata Mesajı -->
                    <div class="row mb-3" attrs="{'invisible': [('ilce_uygun_mu','=', True)]}">
                        <div class="col-12">
                            <div class="alert alert-danger mb-0">
                                <i class="fa fa-exclamation-triangle"/> 
                                <strong>Uygun Değil:</strong>
                                <field name="uygunluk_mesaji" readonly="1" nolabel="1" class="mt-2"/>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Kapasite Bilgileri -->
                    <div class="row" attrs="{'invisible': [('ilce_uygun_mu','=', False)]}">
                        <div class="col-12">
                            <div class="card shadow-sm">
                                <div class="card-header bg-primary text-white">
                                    <h5 class="mb-0"><i class="fa fa-bar-chart"/> Kapasite Bilgileri</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <div class="col-md-3 mb-3">
                                            <div class="card border-primary">
                                                <div class="card-body">
                                                    <h6 class="text-muted mb-2">Toplam Kapasite</h6>
                                                    <h3 class="text-primary mb-0">
                                                        <field name="toplam_kapasite" readonly="1" widget="integer" nolabel="1"/>
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="card border-info">
                                                <div class="card-body">
                                                    <h6 class="text-muted mb-2">Kullanılan</h6>
                                                    <h3 class="text-info mb-0">
                                                        <field name="kullanilan_kapasite" readonly="1" widget="integer" nolabel="1"/>
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="card border-success">
                                                <div class="card-body">
                                                    <h6 class="text-muted mb-2">Kalan Kapasite</h6>
                                                    <h3 class="text-success mb-0">
                                                        <field name="kalan_kapasite" readonly="1" widget="integer" nolabel="1"/>
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <div class="card border-warning">
                                                <div class="card-body">
                                                    <h6 class="text-muted mb-2">Teslimat Sayısı</h6>
                                                    <h3 class="text-warning mb-0">
                                                        <field name="teslimat_sayisi" readonly="1" widget="integer" nolabel="1"/>
                                                    </h3>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Uygun Araçlar -->
                                    <div class="row mt-4">
                                        <div class="col-12">
                                            <h6 class="text-muted mb-2"><i class="fa fa-truck"/> Uygun Araçlar</h6>
                                            <field name="uygun_arac_ids" readonly="1" widget="many2many_tags" nolabel="1"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Uygun Günler Listesi -->
                    <div class="row mt-3" attrs="{'invisible': [('ilce_uygun_mu','=', False)]}">
                        <div class="col-12">
                            <div class="card shadow-sm">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0"><i class="fa fa-calendar"/> Uygun Günler</h5>
                                </div>
                                <div class="card-body">
                                    <field name="uygun_gunler" readonly="1" nolabel="1">
                                        <tree decoration-success="kalan_kapasite &gt; 5" 
                                              decoration-warning="kalan_kapasite &lt;= 5 and kalan_kapasite &gt; 0" 
                                              decoration-danger="kalan_kapasite &lt;= 0"
                                              create="false" 
                                              edit="false" 
                                              delete="false"
                                              default_order="tarih"
                                              open="false"
                                              sample="1">
                                            <field name="tarih" readonly="1" widget="date" 
                                                   attrs="{'invisible': [('kalan_kapasite', '&lt;=', 0)]}"
                                                   class="o_date_cell" style="cursor: pointer;"/>
                                            <field name="gun_adi" readonly="1"/>
                                            <field name="teslimat_sayisi" readonly="1"/>
                                            <field name="toplam_kapasite" readonly="1"/>
                                            <field name="kalan_kapasite" readonly="1"/>
                                            <field name="durum_text" readonly="1"/>
                                            <button name="action_teslimat_olustur" string="Teslimat Oluştur" 
                                                    type="object" class="btn-primary btn-sm o_wizard_button" 
                                                    icon="fa-plus"
                                                    attrs="{'invisible': [('kalan_kapasite', '&lt;=', 0)]}"/>
                                        </tree>
                                    </field>
                                    <script>
                                        <![CDATA[
                                            (function() {
                                                setTimeout(function() {
                                                    var tree = document.querySelector('field[name="uygun_gunler"] table');
                                                    if (tree) {
                                                        tree.addEventListener('click', function(e) {
                                                            var dateCell = e.target.closest('td[name="tarih"]');
                                                            if (dateCell && !e.target.closest('button')) {
                                                                var row = dateCell.closest('tr');
                                                                if (row) {
                                                                    var button = row.querySelector('button.o_wizard_button');
                                                                    if (button && !button.closest('[style*="display: none"]')) {
                                                                        button.click();
                                                                        e.preventDefault();
                                                                        e.stopPropagation();
                                                                    }
                                                                }
                                                            }
                                                        });
                                                    }
                                                }, 500);
                                            })();
                                        ]]>
                                    </script>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Gizli Alanlar -->
                    <field name="arac_kucuk_mu" invisible="1"/>
                </div>
                
                <footer>
                    <button string="Kapat" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Transient Model Form View - Satıra tıklandığında direkt wizard açmak için -->
    <record id="view_teslimat_ana_sayfa_gun_form" model="ir.ui.view">
        <field name="name">teslimat.ana.sayfa.gun.form</field>
        <field name="model">teslimat.ana.sayfa.gun</field>
        <field name="arch" type="xml">
            <form string="Teslimat Oluştur" create="false" edit="false" delete="false">
                <header>
                    <!-- Invisible button - Otomatik tıklanacak -->
                    <button name="action_teslimat_olustur" string="Wizard Aç" 
                            type="object" class="oe_highlight" 
                            icon="fa-plus"
                            invisible="1"
                            id="auto_wizard_button"/>
                </header>
                <sheet>
                    <!-- Form view açıldığında otomatik wizard aç -->
                    <script>
                        <![CDATA[
                            (function() {
                                setTimeout(function() {
                                    var button = document.getElementById('auto_wizard_button');
                                    if (button && button.style.display !== 'none') {
                                        button.click();
                                    }
                                }, 200);
                            })();
                        ]]>
                    </script>
                    <div class="alert alert-info">
                        <strong>Wizard açılıyor...</strong>
                    </div>
                    <group>
                        <group>
                            <field name="tarih" readonly="1" invisible="1"/>
                            <field name="gun_adi" readonly="1" invisible="1"/>
                            <field name="teslimat_sayisi" readonly="1" invisible="1"/>
                            <field name="toplam_kapasite" readonly="1" invisible="1"/>
                            <field name="kalan_kapasite" readonly="1" invisible="1"/>
                            <field name="durum_text" readonly="1" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_teslimat_ana_sayfa" model="ir.actions.act_window">
        <field name="name">Ana Sayfa</field>
        <field name="res_model">teslimat.ana.sayfa</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Teslimat Kapasite Sorgulama
            </p>
            <p>
                Araç ve ilçe seçerek teslimat kapasitesini sorgulayabilirsiniz.
            </p>
        </field>
    </record>
</odoo>
