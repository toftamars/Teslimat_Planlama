<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Teslimat Şehir Views -->
    
    <!-- Tree View -->
    <record id="view_teslimat_sehir_tree" model="ir.ui.view">
        <field name="name">teslimat.sehir.tree</field>
        <field name="model">teslimat.sehir</field>
        <field name="arch" type="xml">
            <tree string="Şehirler">
                <field name="name"/>
                <field name="ulke_id"/>
                <field name="aktif"/>
                <field name="teslimat_aktif"/>
                <field name="varsayilan_teslimat_suresi"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_teslimat_sehir_form" model="ir.ui.view">
        <field name="name">teslimat.sehir.form</field>
        <field name="model">teslimat.sehir</field>
        <field name="arch" type="xml">
            <form string="Şehir">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Şehir Adı"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="ulke_id"/>
                            <field name="aktif"/>
                            <field name="teslimat_aktif"/>
                        </group>
                        <group>
                            <field name="varsayilan_teslimat_suresi"/>
                        </group>
                    </group>
                    <!-- ilce_ids tab removed -->
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_teslimat_sehir_search" model="ir.ui.view">
        <field name="name">teslimat.sehir.search</field>
        <field name="model">teslimat.sehir</field>
        <field name="arch" type="xml">
            <search string="Şehir Arama">
                <field name="name"/>
                <field name="ulke_id"/>
                <filter string="Aktif" name="aktif" domain="[('aktif','=',True)]"/>
                <filter string="Teslimat Aktif" name="teslimat_aktif" domain="[('teslimat_aktif','=',True)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_teslimat_sehir" model="ir.actions.act_window">
        <field name="name">Şehirler</field>
        <field name="res_model">teslimat.sehir</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Henüz şehir eklenmemiş
            </p>
            <p>
                Teslimat yapılacak şehirleri buradan yönetebilirsiniz.
            </p>
        </field>
    </record>
</odoo>

