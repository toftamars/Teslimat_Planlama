<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Teslimat Transfer Views -->
    
    <!-- Tree View -->
    <record id="view_teslimat_transfer_tree" model="ir.ui.view">
        <field name="name">teslimat.transfer.tree</field>
        <field name="model">teslimat.transfer</field>
        <field name="arch" type="xml">
            <tree string="Teslimat Transferler">
                <field name="name"/>
                <field name="planlama_id"/>
                <field name="sira_no"/>
                <field name="transfer_no"/>
                <field name="musteri_id"/>
                <field name="arac_id"/>
                <field name="planlanan_tarih"/>
                <field name="durum"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_teslimat_transfer_form" model="ir.ui.view">
        <field name="name">teslimat.transfer.form</field>
        <field name="model">teslimat.transfer</field>
        <field name="arch" type="xml">
            <form string="Teslimat Transfer">
                <header>
                    <button name="action_transfer_belgesi_olustur" string="Teslimat Belgesi Oluştur" 
                            type="object" class="oe_highlight"
                            invisible="durum not in ['bekliyor', 'hazirlaniyor']"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Transfer Adı"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="planlama_id"/>
                            <field name="sira_no"/>
                            <field name="transfer_no" placeholder="Transfer belgesi numarasını girin"/>
                            <field name="stock_picking_id"/>
                        </group>
                        <group>
                            <field name="durum"/>
                            <field name="planlanan_tarih"/>
                            <field name="gerceklesen_tarih"/>
                            <field name="arac_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="musteri_id"/>
                            <field name="kaynak_konum"/>
                            <field name="hedef_konum"/>
                        </group>
                        <group>
                            <field name="urun_id"/>
                            <field name="miktar"/>
                            <field name="birim"/>
                        </group>
                    </group>
                    <group string="Notlar">
                        <field name="notlar" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_teslimat_transfer_search" model="ir.ui.view">
        <field name="name">teslimat.transfer.search</field>
        <field name="model">teslimat.transfer</field>
        <field name="arch" type="xml">
            <search string="Transfer Arama">
                <field name="name"/>
                <field name="transfer_no"/>
                <field name="musteri_id"/>
                <field name="arac_id"/>
                <field name="planlanan_tarih"/>
                <field name="durum"/>
                <filter string="Bekliyor" name="bekliyor" domain="[('durum','=','bekliyor')]"/>
                <filter string="Hazırlanıyor" name="hazirlaniyor" domain="[('durum','=','hazirlaniyor')]"/>
                <filter string="Yolda" name="yolda" domain="[('durum','=','yolda')]"/>
                <filter string="Tamamlandı" name="tamamlandi" domain="[('durum','=','tamamlandi')]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_teslimat_transfer" model="ir.actions.act_window">
        <field name="name">Teslimat Transferler</field>
        <field name="res_model">teslimat.transfer</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Henüz transfer eklenmemiş
            </p>
            <p>
                Transfer belgelerini buradan yönetebilirsiniz.
            </p>
        </field>
    </record>
</odoo>

