<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_teslimat_transfer_wizard_form" model="ir.ui.view">
        <field name="name">teslimat.transfer.wizard.form</field>
        <field name="model">teslimat.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Teslimat Belgesi Oluştur">
                <sheet>
                    <group>
                        <group>
                            <field name="teslimat_tarihi" readonly="1"/>
                            <field name="arac_id" readonly="1"/>
                            <field name="ilce_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="transfer_no" placeholder="Transfer No (stock.picking name)"/>
                            <field name="transfer_id" options="{'no_create': True}"/>
                            <field name="musteri_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <group>
                        <field name="transfer_bilgileri" widget="html" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_create_delivery" type="object" string="✅ Oluştur" class="btn-primary"/>
                    <button special="cancel" string="İptal" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_teslimat_transfer_wizard" model="ir.actions.act_window">
        <field name="name">Teslimat Belgesi Oluştur</field>
        <field name="res_model">teslimat.transfer.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>


