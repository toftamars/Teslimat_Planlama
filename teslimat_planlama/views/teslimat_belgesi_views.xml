<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Teslimat Belgesi Views -->
    
    <!-- Kanban View -->
    <record id="view_teslimat_belgesi_kanban" model="ir.ui.view">
        <field name="name">teslimat.belgesi.kanban</field>
        <field name="model">teslimat.belgesi</field>
        <field name="arch" type="xml">
            <kanban default_group_by="durum" class="o_kanban_dashboard">
                <field name="name"/>
                <field name="teslimat_tarihi"/>
                <field name="musteri_id"/>
                <field name="arac_id"/>
                <field name="ilce_id"/>
                <field name="durum"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><field name="musteri_id"/></div>
                                    <div><field name="ilce_id"/> - <field name="arac_id"/></div>
                                    <div><field name="teslimat_tarihi"/></div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_teslimat_belgesi_tree" model="ir.ui.view">
        <field name="name">teslimat.belgesi.tree</field>
        <field name="model">teslimat.belgesi</field>
        <field name="arch" type="xml">
            <tree string="Teslimat Belgeleri" decoration-info="durum == 'hazir'" decoration-success="durum == 'teslim_edildi'" decoration-danger="durum == 'iptal'">
                <field name="name"/>
                <field name="teslimat_tarihi"/>
                <field name="musteri_id"/>
                <field name="arac_id"/>
                <field name="ilce_id"/>
                <field name="surucu_id"/>
                <field name="durum" widget="badge" decoration-success="durum == 'teslim_edildi'" decoration-info="durum == 'hazir'" decoration-warning="durum == 'yolda'" decoration-danger="durum == 'iptal'"/>
                <field name="transfer_no"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_teslimat_belgesi_form" model="ir.ui.view">
        <field name="name">teslimat.belgesi.form</field>
        <field name="model">teslimat.belgesi</field>
        <field name="arch" type="xml">
            <form string="Teslimat Belgesi">
                <header>
                    <button name="action_teslimat_tamamla" string="âœ… TeslimatÄ± Tamamla" type="object" 
                            class="oe_highlight" icon="fa-check"
                            attrs="{'invisible': [('durum', 'not in', ['hazir', 'yolda'])]}"
                            groups="teslimat_planlama.group_teslimat_driver"/>
                    <button name="action_yol_tarifi" string="ğŸ—ºï¸ Yol Tarifi" type="object" 
                            class="btn-primary" icon="fa-map-marker"/>
                    <field name="durum" widget="statusbar" 
                           statusbar_visible="taslak,bekliyor,hazir,yolda,teslim_edildi"/>
                </header>
                <sheet>
                    <!-- YÃ¶netici Bilgilendirme -->
                    <div class="alert alert-info" role="alert" groups="teslimat_planlama.group_teslimat_manager">
                        <strong>ğŸ‘‘ YÃ¶netici Modu</strong> - SÄ±nÄ±rsÄ±z teslimat oluÅŸturabilir, tÃ¼m kÄ±sÄ±tlamalarÄ± bypass edebilirsiniz.
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Teslimat No"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="teslimat_tarihi"/>
                            <field name="stock_picking_id"/>
                            <field name="transfer_no"/>
                        </group>
                        <group>
                            <field name="arac_id"/>
                            <field name="ilce_id"/>
                            <field name="surucu_id"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="musteri_id"/>
                            <field name="musteri_telefon" widget="phone"/>
                        </group>
                        <group>
                            <field name="sira_no"/>
                        </group>
                    </group>
                    <group string="Transfer ÃœrÃ¼nleri">
                        <field name="transfer_urun_ids" readonly="1">
                            <tree editable="false">
                                <field name="sequence"/>
                                <field name="urun_id"/>
                                <field name="miktar"/>
                                <field name="birim"/>
                                <field name="stock_move_id" invisible="1"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Teslim Bilgileri" attrs="{'invisible': [('durum', '!=', 'teslim_edildi')]}">
                        <group>
                            <field name="teslim_alan_kisi" readonly="1"/>
                            <field name="gercek_teslimat_saati" readonly="1"/>
                        </group>
                        <group>
                            <field name="enlem" readonly="1"/>
                            <field name="boylam" readonly="1"/>
                        </group>
                    </group>
                    <group string="Notlar">
                        <field name="notlar" nolabel="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_teslimat_belgesi_search" model="ir.ui.view">
        <field name="name">teslimat.belgesi.search</field>
        <field name="model">teslimat.belgesi</field>
        <field name="arch" type="xml">
            <search string="Teslimat Belgesi Arama">
                <field name="name"/>
                <field name="teslimat_tarihi"/>
                <field name="musteri_id"/>
                <field name="arac_id"/>
                <field name="ilce_id"/>
                <field name="surucu_id"/>
                <field name="transfer_no"/>
                <field name="durum"/>
                <filter string="BugÃ¼n" name="bugun" domain="[('teslimat_tarihi','=',context_today().strftime('%Y-%m-%d'))]"/>
