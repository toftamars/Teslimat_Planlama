<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Teslimat Belgesi Wizard Form View -->
    <record id="view_teslimat_belgesi_wizard_form" model="ir.ui.view">
        <field name="name">teslimat.belgesi.wizard.form</field>
        <field name="model">teslimat.belgesi.wizard</field>
        <field name="arch" type="xml">
            <form string="Teslimat Belgesi Oluştur">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span>📋 Teslimat Belgesi Oluştur</span>
                        </h1>
                    </div>
                    
                    <!-- Temel Bilgiler -->
                    <group>
                        <group>
                            <field name="teslimat_tarihi" readonly="1"/>
                            <field name="arac_id" readonly="1"/>
                            <field name="ilce_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Transfer No -->
                    <group>
                        <field name="transfer_id" options="{'no_create': True}" placeholder="DEPO/OUT/00085 yazarak arayın"/>
                    </group>
                    
                    <!-- Müşteri ve Adres (otomatik) -->
                    <group>
                        <group>
                            <field name="musteri_id" readonly="1"/>
                            <field name="adres" readonly="1"/>
                        </group>
                    </group>
                </sheet>
                
                <footer>
                    <button name="action_teslimat_olustur" 
                            string="✅ Teslimat Belgesi Oluştur" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="❌ İptal" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    
    <!-- Teslimat Belgesi Wizard Action -->
    <record id="action_teslimat_belgesi_wizard" model="ir.actions.act_window">
        <field name="name">Teslimat Belgesi Oluştur</field>
        <field name="res_model">teslimat.belgesi.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
