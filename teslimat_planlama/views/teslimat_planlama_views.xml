    <!-- Teslimat Gün Kapatma Wizard View -->
    <record id="view_teslimat_gun_kapatma_wizard_form" model="ir.ui.view">
        <field name="name">teslimat.gun.kapatma.wizard.form</field>
        <field name="model">teslimat.gun.kapatma.wizard</field>
