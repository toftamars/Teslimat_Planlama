        </field>
    </record>

    <!-- Kapasite Onay Actions -->
    <record id="action_teslimat_kapasite_onay" model="ir.actions.act_window">
        <field name="name">Kapasite Onayları</field>
        <field name="res_model">teslimat.kapasite.onay</field>
