    <record id="action_teslimat_planlama_akilli" model="ir.actions.act_window">
        <field name="name">Akıllı Planlama</field>
        <field name="res_model">teslimat.planlama.akilli</field>
        <field name="view_mode">tree,form</field>
        <field name="groups_id" eval="[(6,0,[ref('teslimat_planlama.group_teslimat_manager')])]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
