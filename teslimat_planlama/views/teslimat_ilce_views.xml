<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Teslimat İlçe Views -->
    
    <!-- Tree View -->
    <record id="view_teslimat_ilce_tree" model="ir.ui.view">
        <field name="name">teslimat.ilce.tree</field>
        <field name="model">teslimat.ilce</field>
        <field name="arch" type="xml">
            <tree string="İlçeler">
                <field name="name"/>
                <field name="sehir_id"/>
                <field name="yaka_tipi"/>
                <field name="aktif"/>
                <field name="teslimat_aktif"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_teslimat_ilce_form" model="ir.ui.view">
        <field name="name">teslimat.ilce.form</field>
        <field name="model">teslimat.ilce</field>
        <field name="arch" type="xml">
            <form string="İlçe">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="İlçe Adı"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sehir_id"/>
                            <field name="yaka_tipi" readonly="1"/>
                            <field name="aktif"/>
                            <field name="teslimat_aktif"/>
                        </group>
                        <group>
                            <field name="teslimat_suresi"/>
                            <field name="ozel_durum"/>
                            <field name="posta_kodu"/>
                        </group>
                    </group>
                    <group string="Konum Bilgileri">
                        <group>
                            <field name="enlem"/>
                            <field name="boylam"/>
                        </group>
                    </group>
                    <group string="Notlar">
                        <field name="teslimat_notlari" nolabel="1"/>
                    </group>
                    <notebook>
                        <page string="Teslimat Günleri">
                            <field name="gun_ids" readonly="1" widget="many2many_tags"/>
                            <p class="text-muted">
                                İlçe-gün eşleştirmeleri "Teslimat Günleri" menüsünden yapılabilir.
                            </p>
                        </page>
                        <page string="Uygun Araçlar">
                            <field name="arac_ids" widget="many2many_tags"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_teslimat_ilce_search" model="ir.ui.view">
        <field name="name">teslimat.ilce.search</field>
        <field name="model">teslimat.ilce</field>
        <field name="arch" type="xml">
            <search string="İlçe Arama">
                <field name="name"/>
                <field name="sehir_id"/>
                <field name="yaka_tipi"/>
                <filter string="Aktif" name="aktif" domain="[('aktif','=',True)]"/>
                <filter string="Teslimat Aktif" name="teslimat_aktif" domain="[('teslimat_aktif','=',True)]"/>
                <filter string="Anadolu Yakası" name="anadolu" domain="[('yaka_tipi','=','anadolu')]"/>
                <filter string="Avrupa Yakası" name="avrupa" domain="[('yaka_tipi','=','avrupa')]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_teslimat_ilce" model="ir.actions.act_window">
        <field name="name">İlçeler</field>
        <field name="res_model">teslimat.ilce</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_aktif': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Henüz ilçe eklenmemiş
            </p>
            <p>
                Teslimat yapılacak ilçeleri buradan yönetebilirsiniz.
            </p>
        </field>
    </record>
</odoo>

