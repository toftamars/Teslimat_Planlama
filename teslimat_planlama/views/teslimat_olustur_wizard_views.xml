<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_teslimat_olustur_wizard_form" model="ir.ui.view">
        <field name="name">teslimat.olustur.wizard.form</field>
        <field name="model">teslimat.olustur.wizard</field>
        <field name="arch" type="xml">
            <form string="Transfer Belgesi Entegrasyonu">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <span>🔄 Transfer Belgesi Entegrasyonu</span>
                        </h1>
                        <p class="text-muted">Stock Picking'lerden otomatik teslimat oluşturma</p>
                    </div>
                    
                    <!-- Ana Sayfa Bilgileri -->
                    <group>
                        <group>
                            <field name="teslimat_tarihi" readonly="1"/>
                            <field name="arac_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="ilce_id" readonly="1"/>
                            <field name="ana_sayfa_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <!-- Oluşturma Tipi Seçimi -->
                    <group>
                        <field name="olusturma_tipi" widget="radio"/>
                    </group>
                    
                    <!-- Transfer Belgesi Entegrasyonu -->
                    <group attrs="{'invisible': [('olusturma_tipi', '!=', 'transfer_no')]}">
                        <div class="alert alert-info" role="alert">
                            <strong>🔄 Transfer Belgesi Entegrasyonu:</strong> Stock Picking'lerden otomatik teslimat oluşturma
                        </div>
                        
                        <group>
                            <field name="transfer_id" options="{'no_create': True}" domain="[('state','in',['confirmed','assigned','waiting'])]"/>
                            <field name="transfer_no" placeholder="Örnek: AKS/POS/72133, AKSY/OUT/19574"/>
                        </group>
                        <group>
                            <field name="bulunan_transfer" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Transfer Bilgileri -->
                    <group attrs="{'invisible': [('olusturma_tipi', '!=', 'transfer_no')]}">
                        <field name="transfer_bilgileri" readonly="1" nolabel="1" widget="html"/>
                    </group>
                    
                    <!-- Manuel Teslimat Alanları -->
                    <group attrs="{'invisible': [('olusturma_tipi', '!=', 'manuel')]}">
                        <group>
                            <field name="musteri_adi" required="1"/>
                            <field name="telefon"/>
                        </group>
                        <group>
                            <field name="urun_aciklamasi"/>
                        </group>
                    </group>
                    
                    <group attrs="{'invisible': [('olusturma_tipi', '!=', 'manuel')]}">
                        <field name="adres" nolabel="1"/>
                        <field name="teslimat_notu" nolabel="1"/>
                    </group>
                    
                    <!-- Butonlar -->
                    <footer>
                        <button name="action_teslimat_olustur" 
                                string="🔄 Transfer Entegrasyonu ile Oluştur" 
                                type="object" 
                                class="btn-primary"/>
                        <button string="❌ İptal" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Wizard Action -->
    <record id="action_teslimat_olustur_wizard" model="ir.actions.act_window">
        <field name="name">Transfer Belgesi Entegrasyonu</field>
        <field name="res_model">teslimat.olustur.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
